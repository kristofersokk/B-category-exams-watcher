{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noStrictGenericChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "lib": ["es2015"],
  "include": ["src"]
}
